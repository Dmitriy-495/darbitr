{
  "GATEIO": {
    "name": "Gate.io Futures",
    "wsUrl": "wss://fx-ws.gateio.ws/v4/ws/usdt",
    "enabled": true,
    "pingIntervalMs": 30000,
    "pingFormat": {
      "request": { "time": "timestamp", "channel": "futures.ping" },
      "response": { "channel": "futures.pong" }
    },
    "messageHandlers": [
      {
        "type": "pong",
        "match": { "channel": "futures.pong" },
        "action": "handlePong"
      }
    ]
  },
  "BYBIT": {
    "name": "Bybit Futures",
    "wsUrl": "wss://stream.bybit.com/v5/public/linear",
    "enabled": true,
    "pingIntervalMs": 20000,
    "pingFormat": {
      "request": { "op": "ping" },
      "response": { "op": "pong" }
    },
    "messageHandlers": [
      {
        "type": "pong",
        "match": { "op": "pong" },
        "action": "handlePong"
      }
    ]
  },
  "OKX": {
    "name": "OKX Futures",
    "wsUrl": "wss://ws.okx.com:8443/ws/v5/public",
    "enabled": true,
    "pingIntervalMs": 25000,
    "pingFormat": {
      "request": "ping",
      "response": "pong"
    },
    "messageHandlers": [
      {
        "type": "pong",
        "match": "pong",
        "action": "handlePong"
      }
    ]
  }
}
